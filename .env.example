# Web3 Domain Platform - Environment Variables
# Copy this file to .env.local and fill in your values

# WalletConnect Project ID (Get one from https://cloud.walletconnect.com)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# App Metadata
NEXT_PUBLIC_APP_NAME=Web3 Domain Platform
NEXT_PUBLIC_APP_DESCRIPTION=Decentralized domain registration and marketplace
NEXT_PUBLIC_APP_URL=https://yourdomain.com
NEXT_PUBLIC_APP_ICON=https://avatars.githubusercontent.com/u/37784886

# Smart Contract Addresses (Sepolia Testnet)
NEXT_PUBLIC_DOMAIN_CORE_ADDRESS=0xF2650822a05cc2a0E595D1c55448efB6BBD0AFB1
NEXT_PUBLIC_MARKETPLACE_ADDRESS=0x6D4f21a0a4eE799b9FE9651f774cD2c17530892b
NEXT_PUBLIC_EXTENSION_MANAGER_ADDRESS=0x0682Ee75F3d918AED6FC4B39A4E9ECa1Fa710Fc3
NEXT_PUBLIC_RESOLVER_ADDRESS=0x074443faFb649Ba1C56C93f2Fe46D607E69DECFc

# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:3001

# Node Environment (development, production, staging)
NODE_ENV=production
